body{
    background-image: url("/static/images/background_3.jpg");
    /*background-repeat: no-repeat;*/
    background-size: 100%;
    background-repeat: no-repeat;
}

.innerDiv{
    overflow-x: auto;
    width: 100%;
    height: 39rem;
}
.activityItem{
    background-color: rgba(248, 248, 231, 0.79);
    overflow: hidden;
    padding: 1rem;
    font-size: 1.5rem;
    color: #916108;

}
.itemBox{
    margin: 2rem 3rem;
    padding: 2rem 0rem;
    border-bottom: 1px solid #d0d1c6;
}
.success{
    font-weight: 700;
    display: block;
    background-color: #6bb070;
    margin-top: 2rem;
    padding: 0.2rem 0;
    border-radius: 5px 5px 5px 5px;
    color: white;
    text-align: center;
}
.waiting{
    font-weight: 700;
    display: block;
    background-color: rgba(23, 157, 175, 1);
    margin-top: 2rem;
    padding: 0.2rem 0;
    border-radius: 5px 5px 5px 5px;
    color: white;
    text-align: center;
}
.failed{
    font-weight: 700;
    display: block;
    background-color: #CA304E;
    margin-top: 2rem;
    padding: 0.2rem 0;
    border-radius: 5px 5px 5px 5px;
    color: white;
    text-align: center;
}
