body{
    background-image: url("/static/images/background_2.jpg");
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

#latestHeader{
    border: none;
    background-color: transparent;
    overflow: hidden;
    border-bottom:2px solid #6bb070;
}
#latestHeader div{
    background-color: transparent;
    width: 33.33%;
    position: static;
    float: left;
    text-align: center;
    padding-top: 1rem;
    padding-bottom: 1rem;
    font-size: 1.5rem;
}
#latestHeader a{
    text-decoration: none;
    color: #aeaea9;
}
#latestHeader a:hover{
    color: black;
}
.passAssess{
    border-right: 1px solid gray;
    border-left: 1px solid gray;
}
.personAssessList span{
    color: rgb(150,100,8);
}
.activityItem{
    /*background: url("/static/images/background_3.jpg");*/
    margin: 1rem;
    padding: 1rem;
    font-size: 1.5rem;
    color: #916108;
}
.itemBox{
    background-color: rgba(248, 248, 231, 0.79);
    padding: 2rem;
    overflow: hidden;
}
.operation{
    overflow: hidden;
    margin-top: 3rem;
}
.activityItem .pass,.activityItem .unpass{
    width: 4rem;
    height: 2.5rem;
    float: left;
    padding: 1%;
    padding-left: 4%;
    padding-right: 4%;
    margin: 0;
    margin-left: 0.4rem;
}
.activityItem .pass{
    background-color: #6bb070;
}
.activityItem .unpass{
    background-color: #F20E39;
}
.activityItem .detail{
    background-color: transparent;
    height: 3rem;
    padding: 2.5%;
    padding-top: 0;
    border: none;
    float: right;
    margin-right: 1rem;
    cursor: pointer;
}
.detail span{
    display: inline-block;
    color: rgb(150,100,8);
}
.detail .img{
    width: 3rem;
    
}
.activityItem .pass img,.activityItem .unpass img{
    width: 70%;
}
.activityItem .detail img{
    width: 120%;
}
.innerDiv{
    overflow-x: auto;
    width: 100%;
    height: 39rem;
}