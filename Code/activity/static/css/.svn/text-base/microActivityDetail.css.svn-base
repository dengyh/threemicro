body{
    background-image: url("/static/images/background_5.jpg");
    background-size: cover;
    background-repeat: no-repeat;
}

.activityItem{
    background-color: rgba(200, 226, 119, 0.48);
    border-bottom:1px solid #9bcb64;
    overflow: hidden;
    padding: 0.6rem 2rem;
    margin: 1rem;
    border-radius: 15px 15px 15px 15px;
}
dt{
    font-size: 2rem;
    margin:1rem 0;
    color: #417705;
}
dd{
    margin-left: 1rem;
    font-size: 1.5rem;
    line-height: 1.9;
    color: black;
}
.ui-content{
    padding-left: 0;
    padding-right: 0;
}
.ui-page-theme-a .ui-btn{
    font-size: 1rem;
    background-color: transparent;
    border-color: #355614;
    border-radius: 15px 15px 15px 15px;
    color:#a97518;
    width: 25%;
    margin-top: 2rem;
    padding: 0.5rem;
    float: right;
}
.ui-page-theme-a .ui-btn:hover{
    background-color: #355614;
    color: white;
};
#activityContent .content {
    width: 100%;
}
#activityContent .content img{
    width: 100%;
}