{% extends "base.html" %}
{% block titlebar %}报名活动{% endblock %}
{% block import %}
<link rel="stylesheet" type="text/css" href="/static/css/signUpActivity.css">
<link rel="stylesheet" type="text/css" href="/static/css/studentTopBar.css">
{% endblock %}
{% block content %}
{% include "studentPageTop.html" %}
<div class="middlePart">
    <div class="titleItem"><h1>{{campus}}公益活动</h1></div>
    {% for item in activities %}
    <dl class="activityItem">
        <dt>
            {% include "label.html" %}
            {{item.title}}
        </dt>
        <dd>时间 : {{item.startDateTime}}到{{item.endDateTime}}</dd>
        <dd>地点 : {{item.location}}</dd>
        <a data-href="/student/detail/{{item.id}}/"><button class="detail">详细信息</button></a>
        <div class="clear">
        </div>
    </dl>
    {% empty %}
        <div class="ifEmpty">
            当前项还没有活动！
        </div>
    {% endfor %}
</div>
{% include "footPart.html" %}
{% endblock %}